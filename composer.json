{
    "name": "itaxcix/api",
    "description": "API del proyecto iTaxCix",
    "type": "project",
    "require": {
        "php": "^8.1",
        "doctrine/orm": "^3.2",
        "doctrine/dbal": "4.2.3",
        "vlucas/phpdotenv": "^5.6",
        "symfony/cache": "^7.2",
        "nikic/fast-route": "^1.3",
        "zircote/swagger-php": "^5.1",
        "nyholm/psr7": "^1.8",
        "php-di/php-di": "^7.0",
        "psr/http-message": "^2.0",
        "firebase/php-jwt": "^6.11",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "nyholm/psr7-server": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "itaxcix\\": "src/"
        }
    },
    "scripts": {
        "db:create": "php bin/doctrine dbal:database:create",
        "db:drop": "php bin/doctrine dbal:database:drop --force",
        "db:update": "php bin/doctrine orm:schema-tool:update --force",
        "generate-swagger": "openapi src -o public/openapi.json"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "license": "MIT"
}
