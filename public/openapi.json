{
    "openapi": "3.0.0",
    "info": {
        "title": "API iTaxCix",
        "description": "Documentación de la API RESTful del aplicativo iTaxCix",
        "contact": {
            "name": "Desarrollador",
            "email": "antoniopaiva2608@gmail.com"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:80",
            "description": "Servidor local de desarrollo"
        }
    ],
    "paths": {
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Iniciar sesión con alias y contraseña",
                "operationId": "9267e007a78e9ef6d1fa6de2d0df5697",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "alias",
                                    "password"
                                ],
                                "properties": {
                                    "alias": {
                                        "type": "string",
                                        "example": "juanperez"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Inicio de sesión exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Login successful"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Credenciales inválidas"
                    }
                }
            }
        },
        "/api/v1/auth/register/citizen": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registrarse como ciudadano",
                "operationId": "d49b68e08135d296fca8bd831a94377f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "documentType",
                                    "documentNumber",
                                    "alias",
                                    "password",
                                    "contactMethod"
                                ],
                                "properties": {
                                    "documentType": {
                                        "description": "tb_tipo_documento.tipo_id",
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "documentNumber": {
                                        "description": "Número del documento",
                                        "type": "string",
                                        "example": "V12345678"
                                    },
                                    "alias": {
                                        "type": "string",
                                        "example": "juanperez"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    },
                                    "contactMethod": {
                                        "type": "object",
                                        "example": {
                                            "email": "juan@example.com"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario registrado correctamente"
                    },
                    "400": {
                        "description": "Datos inválidos o duplicados"
                    }
                }
            }
        },
        "/api/v1/auth/register/driver": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Registrarse como conductor",
                "operationId": "d04603a624c3fa1eb190522a224950f5",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "documentType",
                                    "documentNumber",
                                    "alias",
                                    "password",
                                    "contactMethod",
                                    "licensePlate"
                                ],
                                "properties": {
                                    "documentType": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "documentNumber": {
                                        "type": "string",
                                        "example": "V12345678"
                                    },
                                    "alias": {
                                        "type": "string",
                                        "example": "carlosdriver"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    },
                                    "contactMethod": {
                                        "type": "object",
                                        "example": {
                                            "email": "carlos@example.com"
                                        }
                                    },
                                    "licensePlate": {
                                        "type": "string",
                                        "example": "A1B-234D"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Conductor registrado correctamente"
                    },
                    "400": {
                        "description": "Datos inválidos o duplicados"
                    }
                }
            }
        },
        "/api/v1/auth/recover/email": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Solicitar recuperación de contraseña por correo",
                "operationId": "06e2268addba22ba10f26ea05f78fb12",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "user@example.com"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Correo de recuperación enviado"
                    },
                    "404": {
                        "description": "Usuario no encontrado"
                    }
                }
            }
        },
        "/api/v1/auth/recover/phone": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Solicitar recuperación de contraseña por teléfono",
                "operationId": "75ac2128b09ff7a57f2c262c0931b82c",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "phone"
                                ],
                                "properties": {
                                    "phone": {
                                        "type": "string",
                                        "example": "+584121234567"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Código SMS enviado para recuperación"
                    },
                    "404": {
                        "description": "Usuario no encontrado"
                    }
                }
            }
        },
        "/api/v1/auth/verify-code": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Verificar código de recuperación",
                "operationId": "b018ff90c8618e9516c18a289eb4322a",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "code": {
                                        "type": "string",
                                        "example": "123456"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "user@example.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "+584121234567"
                                    }
                                },
                                "type": "object",
                                "oneOf": [
                                    {
                                        "required": [
                                            "email",
                                            "code"
                                        ]
                                    },
                                    {
                                        "required": [
                                            "phone",
                                            "code"
                                        ]
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Código verificado correctamente"
                    },
                    "400": {
                        "description": "Código inválido o expirado"
                    }
                }
            }
        },
        "/api/v1/auth/reset-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Restablecer contraseña tras verificar código",
                "operationId": "8edaf090bd06616058c0173695ad40ae",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "userId",
                                    "newPassword"
                                ],
                                "properties": {
                                    "userId": {
                                        "type": "integer",
                                        "example": 123
                                    },
                                    "newPassword": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "nueva_contrasena_123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Contraseña actualizada correctamente"
                    },
                    "400": {
                        "description": "Datos inválidos o token expirado"
                    }
                }
            }
        },
        "/api/v1/hello/{name}": {
            "get": {
                "tags": [
                    "Hello"
                ],
                "summary": "Saludar a un usuario",
                "operationId": "736a7539351d2125f3d7ccab6d8c809a",
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Nombre del usuario",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Mensaje de saludo exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Hola, Juan"
                                        },
                                        "user": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 15
                                                },
                                                "alias": {
                                                    "type": "string",
                                                    "example": "juanperez211"
                                                },
                                                "role": {
                                                    "type": "string",
                                                    "example": "user"
                                                },
                                                "iss": {
                                                    "type": "string",
                                                    "example": "itaxcix-api"
                                                },
                                                "iat": {
                                                    "type": "integer",
                                                    "example": 1746521578
                                                },
                                                "exp": {
                                                    "type": "integer",
                                                    "example": 1746525178
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado - Token inválido o expirado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "properties": {
                                                "message": {
                                                    "type": "string",
                                                    "example": "Token no proporcionado"
                                                },
                                                "code": {
                                                    "type": "integer",
                                                    "example": 401
                                                },
                                                "status": {
                                                    "type": "integer",
                                                    "example": 401
                                                },
                                                "timestamp": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                },
                                                "path": {
                                                    "type": "string",
                                                    "example": "/api/v1/hello/Juan"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Operaciones relacionadas con autenticación de usuarios"
        },
        {
            "name": "Hello",
            "description": "Hello"
        }
    ]
}